  <div class="modal-content">
    <span class="close" id="closeOverdueModal">&times;</span>
    <h3>Tickets Vencidos</h3>
    <div id="overdueTicketsList">
      <!-- Conteúdo dinâmico aqui -->
    </div>
  </div>
</div>

